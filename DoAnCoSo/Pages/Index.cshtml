@page
@model IndexModel
<link href="~/../../../../đồ án/doancoso/doancoso/wwwroot/css/site.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Home page";
}
<div class="container mt-4">
    <div class="row">
        <div class="col">
            <div class="custom-select-container">
                <form class="form-inline mb-3">
                    <select class="custom-select mr-sm-2 dropdown-orange">
                        <option selected>Chọn khối</option>
                        <option value="1">Khối 1</option>
                        <option value="2">Khối 2</option>
                        <option value="3">Khối 3</option>
                        <!-- Thêm các tùy chọn khác nếu cần -->
                    </select>
                    <select class="custom-select mr-sm-2 dropdown-orange">
                        <option selected>Chọn môn học</option>
                        <option value="1">Toán</option>
                        <option value="2">Văn</option>
                        <option value="3">Anh</option>
                        <!-- Thêm các tùy chọn khác nếu cần -->
                    </select>
                </form>
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-person-fill" style="color: orange;"></i>
                    <form class="form-inline ml-2">
                        <input type="text" placeholder="Nhập văn bản vào đây..." class="large-input">
                    </form>
                </div>
                <div class="button-container">
                    <button id="createQuestionButton" class="button">Tạo câu hỏi</button>
                    <button id="cancelButton" class="button">Hủy</button>
                </div>
            </div>
        </div>
    </div>
</div>
