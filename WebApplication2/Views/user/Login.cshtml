@model WebApplication2.Models.UserLoginRequest

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-orange">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><img src="~/images/logi.jpg" alt="logi" style="width:65px" /></a>
            </div>
        </nav>
    </header>

    <div class="row">
        <div class="col-md-6 mt-5">
            <div class="container img-signin2">
                <h2 class="res-text">Trao Đổi Học Liệu</h2>
                <div class="img-signin">
                    <img src="~/images/sigin.png" alt="signin" style="width:500px" />
                </div>
            </div>
        </div>

        <div class="col-md-6 mt-5">
            <div class="container">
                <h2 class="res-text">Đăng Nhập</h2>
                <form asp-action="Login" method="post">
                    <div class="form-group">
                        <label asp-for="eMail" class="control-label">Email</label>
                        <input asp-for="eMail" class="form-control" type="email" required />
                        <span asp-validation-for="eMail" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Mật Khẩu</label>
                        <input asp-for="Password" class="form-control" type="password" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center mt-3">
                        <button type="submit" class="btn" style="background-color: #FC8717; color: white; width: 250px;">Đăng Nhập</button>
                        <a href="https://localhost:7222/user/Register" class="btn btn-primary ms-2" style="width: 100px;">Đăng Ký</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <footer class="res-footer mt-5">
        <p>
            Công ty cổ phần Circle Sync &copy; 2014 - 2024 <br /> Liên hệ: Nguyễn Minh Tú - Hotline: 0399727809 - Email: CircleSync@gmail.com
        </p>
    </footer>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
